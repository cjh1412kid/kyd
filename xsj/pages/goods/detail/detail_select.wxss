}

.color_line, .size_line, .number_line {
  margin-top: 24rpx;
  font-size: 25rpx;
}

.color_line .title, .size_line .title, .number_line .buy_number {
  color: #505050;
}

.color_line .select, .size_line .select {
  margin: 20rpx 10rpx;
  overflow: hidden;
}

.color_line .select_one, .size_line .select_one {
  width: 88rpx;
  height: 33rpx;
  line-height: 33rpx;
  text-align: center;
  border-radius: 16rpx;
  border: solid 1px #505050;
  float: left;
  margin-right: 40rpx;
}

.color_line .select_one.choose, .size_line .select_one.choose {
  background-color: #f44;
  color: #fff;
  border: solid 1px #f44;
}

.size_line .select_one {
  width: 50rpx;
}

.number_line {
  display: flex;
}

.number_line .buy_number {
  flex: 1;
}

.number_line .buy_number text {
  color: #999;
}

.number_line .count text {
  margin: auto 20rpx;
  font-size: 30rpx;
  color: #444;
}

.number_line .count .icon {
  width: 50rpx;
  font-size: 30rpx;
  color: #999;
}

.prices_line {
  margin-top: 20rpx;
  color: #f44;
  font-size: 50rpx;
}

.select_btn_group {
  width: 750rpx;
  display: flex;
  position: absolute;
  bottom: 0;
  height: 0;
  transition: all 0.2s ease;
}

.select_dialog.nochoosed .select_btn_group {
  height: auto;
}

.select_btn_group .btn {
  flex: 1;
  color: #fff;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 42rpx;
  text-align: center;
}

.select_btn_group .make_sure_btn {
